{
  "compilerOptions": {
    "target": "esNext",
    "module": "commonjs",
    "rootDir": "./src",
    "baseUrl": "./",
    "types": [
      "node"
    ],
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
